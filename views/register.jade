extends layout

block content
	#login
		form(action='/signup',method="post")#login-form
			h1 SignUp
			p.subheading Dit is helemaal GRATIS!
			label Naam:
			input(type="text", name="username", id='user-tf' placeholder='Joske',required).formnaam
			br 
			label Email:
			input(type="email", name="email", id='user-tf' placeholder='email@example.com',required).formemail
			br 
			label Wachtwoord:
			input(type="password", name="password", id='pass-tf' placeholder='******',required).formwachtwoord
			br
			button(type="submit")#btn-login.btn.btn-primary
				| Sign up

			


	#message
		if message
			h1.text-center.error-message #{message}